<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- for Tomcat 5.x, you must use x$$class instead of x$class !-->
  <servlet>
    <servlet-name>helloWorld</servlet-name>
    <servlet-class>HelloScalaServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>namedHelloWorld</servlet-name>
    <servlet-class>NamedHelloWorldServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>namedHelloWorld</servlet-name>
    <url-pattern>/sayMyName</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>helloWorld</servlet-name>
    <url-pattern>/sayHello</url-pattern>
  </servlet-mapping>
</web-app>
